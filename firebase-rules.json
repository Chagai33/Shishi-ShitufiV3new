{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },

    "events": {
      // --- הוספת האינדקס החסר ---
      ".indexOn": ["organizerId"],
      
      ".read": "auth != null",
      ".write": "auth != null",
      "$eventId": {
        ".read": "auth != null",
        ".write": "auth != null && ( !data.exists() || data.child('organizerId').val() === auth.uid || newData.child('organizerId').val() === auth.uid )",
        "details": {
          ".write": "auth != null && ( !data.exists() || root.child('events').child($eventId).child('organizerId').val() === auth.uid )"
        },
        "menuItems": {
          ".write": "auth != null",
          "$itemId": {
            ".write": "auth != null"
          }
        },
        "participants": {
          "$participantId": {
            ".write": "auth != null && $participantId === auth.uid"
          }
        },
        "assignments": {
          "$assignmentId": {
            ".write": "auth != null && ( (newData.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && data.child('userId').val() === auth.uid) || (data.exists() && !newData.exists() && root.child('events').child($eventId).child('organizerId').val() === auth.uid) )"
          }
        }
      }
    },

    "presetLists": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    
    "admins": {
      ".read": true,
      "$uid": {
        ".write": "root.child('admins').child(auth.uid).exists()"
      }
    }
  }
}